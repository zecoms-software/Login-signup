<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
     <link rel="stylesheet" href="https://unpkg.com/element-toast/lib/index.css" />
   <style>
    #form{
        width: 30%;
        margin:auto;
        margin-top: 100px;
        /* border: 2px solid black; */
        padding: 20px;
        border-radius: 20px;
        background-color: rgba(0, 0, 0, 0.342);
    }
   </style>
   <script src="https://unpkg.com/element-toast/lib/index.js"></script>
  <script>
    const toast = require('element-toast').default;

    // Listen for toast message events and display the message
    document.addEventListener('toast', function(event) {
      var options = {
        message: event.detail.message,
        type: event.detail.type,
      };
      toast(options);
    });
  </script>
</head>
<body>
    <div id="form">
        <form method="POST">
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Email address</label><br>
              <input type="email" name="email">
          
            </div>
            <div class="mb-3">
              <label  class="form-label">Password</label><br>
              <input type="password" name="password">
            </div>
         <p>   Don't have an account <a href="./signup"> SignUp</a></p>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
    </div>
   
  
</body>
</html>